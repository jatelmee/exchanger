{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "strict": true,
        "jsx": "preserve",
        "outDir": "dist",
        "importHelpers": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "application/views/components/*"
            ]
        },
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
        ]
    },
    "include": [
        "application/views/components/**/*.ts",
        "application/views/components/**/*.vue"
    ],
    "exclude": [
        "node_modules"
    ]
}